<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="enable_alerts"
        android:title="@string/pref_title_enable_alerts"
        android:summary="@string/pref_description_enable_alerts"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="default_city"
        android:title="@string/pref_title_city"
        android:defaultValue="@string/pref_default_city"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
